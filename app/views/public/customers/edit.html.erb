<div class="container">
	<div class="row">
		<div class="col-lg-5">
			<h1>会員情報編集</h1>
			<%= form_with model:@public, url: public_customer_path, local:true do |f| %>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"氏名" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :last_name %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :first_name %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"カナ" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :last_name_kana %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :first_name_kana %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"郵便番号" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :postal_code %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"住所" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :address %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"電話番号" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :telephone_number %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"メールアドレス" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :email %>
					</div>
				</div>
				<%= f.submit "編集内容を保存" %>
				<%= link_to "退会する", public_customers_confirm_path,"data-confirm" => "本当に退会しますか？", class:"btn btn-danger" %>
 			<% end %>
		</div>
	</div>
</div>