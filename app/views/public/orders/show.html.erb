<div class="container">
  <h1>注文履歴詳細</h1>
    <div class="row">
      <div class="col-lg-9">
        <table class="table table-bordered">
        <tr>注文情報</tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td></td>
          </tr>
        </table>
      </div>
      <div class="col-md-3">
        <table class="table table-bordered">
          <tr>請求情報</tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @total + @order.shipping_cost %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class ="col-lg-9">
        <table class="table table-bordered">
          <tr>注文内容</tr>
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
            <% @order.order_details.each do |f| %>
            <tr>
              <td><%= f.item_image.name %></td>
              <td><%= f.price %></td>
              <td><%= f.amount %></td>
              <td><%= f.item_image.price * f.amount %></td>
            <% end %>
            </tr>
        </table>
      </div>
    </div>
</div>