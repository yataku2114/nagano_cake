<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<h1>会員情報編集</h1>
			<%= form_with model:@public, url: admin_customer_path, local:true do |f| %>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"氏名" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :last_name %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :first_name %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"カナ" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :last_name_kana %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :first_name_kana %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"郵便番号" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :postal_code %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"住所" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :address %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"電話番号" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :telephone_number %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"メールアドレス" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :email %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						<%= f.label :"会員ステータス" %>
					</div>
					<div class="col-lg-5">
						<%= f.radio_button :is_valid, "有効" %>有効
						<%= f.radio_button :is_valid, "退会" %>退会
					</div>
				<%= f.submit "変更を保存", class: "button btn btn-success center-block" %>
 			<% end %>
		</div>
	</div>
</div>