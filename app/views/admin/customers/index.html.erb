<div class="container">
  <h1>会員一覧画面</h1>
  <table class="table">
    <thread>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thread>
    <tbody>
      <% @publics.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= link_to p.last_name, admin_customer_path(p.id) %><%= link_to p.first_name, admin_customer_path(p.id) %></td>
          <td><%= p.email %></td>
          <% if p.is_valid %>
          <td class="text-success">有効</td>
          <% else %>
          <td class="text-secondary">退会</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>