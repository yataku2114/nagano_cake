<div class="container">
    <h1>商品詳細</h1>
        <div class="row">
            <%= attachment_image_tag @item_image, :image, :fill, 200, 200, format: "jpeg" %>
                <div class="col-md-3">
                    <h4>商品名</h4>
                    <h4>商品説明</h4>
                    <h4>ジャンル</h4>
                    <h4>税込価格（税抜価格）</h4>
                    <h4>販売ステータス</h4>
                </div>
                <div class="col-md-">
                    <h4><%= @item_image.name %></h4>
                    <h4><%= @item_image.introduction %></h4>
                    <h4><%= @item_image.genre.name %></h4>
                    <h4><%= @item_image.price %>（<%= @item_image_tax %>）円</h4>
                    <h4>
                        <% if @item_image.is_active %>
                        <td class="text-success">販売中</td>
                        <% else %>
                        <td class="text-secondary">販売中止中</td>
                        <% end %>
                    </h4>
                </div>
        </div>
    <div class="text-center">
        <%= link_to "編集する", edit_admin_item_image_path(@item_image.id), class: "btn btn-success" %>
    </div>
</div>