<div class="container">
  <h2>ジャンル一覧・追加</h2>
    <div class="row">
      <div class="col-md-7">
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
          <h3>
            <%= f.label :ジャンル %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </h3>
        <% end %>
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tobody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tobody>
        </table>
      </div>
    </div>
</div>