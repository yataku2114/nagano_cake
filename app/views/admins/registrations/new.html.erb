<div class="container">
	<div class="row">
		<div class="col-lg-5">
			<h1>新規会員登録</h1>
			<%= form_with model: resource, url: admin_registration_path, id:"new_admin", class: "new_admin", local: true do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"名前" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :last_name %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :first_name %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"フリガナ" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :last_name_kana %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :first_name_kana %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"メールアドレス" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :email %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"郵便番号(ハイフンなし)" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :postal_code %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"住所" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :address %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"電話番号(ハイフンなし)" %>
					</div>
					<div class="col-lg-5">
						<%= f.text_field :telephone_number %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"パスワード(6文字以上)" %>
					</div>
					<div class="col-lg-5">
						<%= f.password_field :password %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<%= f.label :"パスワード(確認用)" %>
					</div>
					<div class="col-lg-5">
						<%= f.password_field :password_confirmation %>
					</div>
				</div>
				　　　　　　　　　　　　　　　　　　<%= f.submit "新規登録" %>
			<% end %>
			<h1>既に登録済みの方</h1>
			 <%= link_to "こちら",new_public_session_path %>からログインしてください
		</div>
	</div>
</div>

<%= render "admins/shared/links" %>
